{
  "name": "agro-connect",
  "version": "1.0.0",
  "description": "A modern agriculture platform connecting farmers, experts, and administrators",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "agriculture",
    "farming",
    "platform",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Agro Connect Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "twilio": "^4.12.0",
    "stripe": "^13.5.0",
    "razorpay": "^2.8.6",
    "axios": "^1.5.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.3.0",
    "sharp": "^0.32.5",
    "cloudinary": "^1.40.0",
    "openai": "^4.0.0",
    "node-cron": "^3.0.2",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}